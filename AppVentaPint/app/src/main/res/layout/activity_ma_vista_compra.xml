<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#2980b9"
    tools:context=".MA_Vista_Compra">

    <ImageView
        android:id="@+id/imgPre"
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:layout_marginTop="25sp"
        android:src="@drawable/ic_launcher_background"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/lblNombrePintura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="70sp"
        android:text="Nombre Pintura"
        android:textColor="@color/white"
        android:layout_below="@+id/imgPre"
        />
    <TextView
        android:id="@+id/lblPrecioPintura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PrecioPintura"
        android:textColor="@color/white"
        android:layout_below="@+id/lblNombrePintura"
        android:layout_marginLeft="70sp"
        android:layout_marginTop="10sp"
        />
    <EditText
        android:id="@+id/txtNombre"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:hint="Ingrese su Nombre"
        android:textColor="@color/white"
        android:textColorHint="#FFEB3B"
        android:layout_below="@+id/lblPrecioPintura"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="50sp"
        />
    <EditText
        android:id="@+id/txtApellido"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:hint="Ingrese su aApellido"
        android:textColorHint="#FFEB3B"
        android:textColor="@color/white"
        android:layout_below="@+id/txtNombre"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="50sp"
        />
    <EditText
        android:id="@+id/txtNit"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:textColorHint="#FFEB3B"
        android:hint="Ingrese su Nit"
        android:textColor="@color/white"
        android:layout_below="@+id/txtApellido"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="50sp"
        />

    <Button
        android:id="@+id/btnComprar"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Comprar"
        android:textColor="@color/black"
        android:layout_margin="10sp"
        android:layout_below="@+id/txtNit"

        />
    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="Cancelar"
        android:layout_toRightOf="@+id/btnComprar"
        android:layout_margin="10sp"
        android:layout_below="@+id/txtNit"
        />





</RelativeLayout>