<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2980b9"
    tools:context=".MA_Compra">

    <TextView
        android:id="@+id/txtSaludo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gracias por su compra"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:textColor="@color/white"
        />
    <ImageView
        android:id="@+id/imgFecilitacion"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_champagne"
        android:layout_below="@+id/txtSaludo"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:id="@+id/txtEncabezado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos de compra"
        android:layout_marginTop="15sp"
        android:layout_below="@+id/imgFecilitacion"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/txtCuadro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre cuadro"
        android:layout_below="@+id/txtEncabezado"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:id="@+id/txtNameClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Cliente"
        android:layout_below="@+id/txtCuadro"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginTop="10sp"
        />

    <TextView
        android:id="@+id/txtNitCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIT"
        android:layout_below="@+id/txtNameClient"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        />

    <TextView
        android:id="@+id/txtMontoPagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total a Pagar \nCon Impuesto"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_below="@+id/txtNitCliente"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="15sp"
        />
    <Button
        android:id="@+id/btnReturn"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:text="Finalizar - Regresar"
        android:layout_below="@+id/txtMontoPagar"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#D50909"
        android:layout_marginTop="20sp"
        android:onClick="onClick"

        />



</RelativeLayout>